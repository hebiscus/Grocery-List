extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div
      label(for='name') Category:
      input#name(type='text', placeholder='' name='name' value=(undefined===category ? '' : category.name))
      label(for="description") Description:
      input#description(type='text', placeholder='description' name='description' value=(undefined===category ? '' : category.description))
    button(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg
